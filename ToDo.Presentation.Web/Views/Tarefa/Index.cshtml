@using ToDo.Domain.Enums;
@model IEnumerable<ToDo.Application.ViewModels.TarefaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table" id="tblTarefas">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsableName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstimatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskStatus)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TaskID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TaskID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TaskID">Delete</a> |
                    <a asp-action="GetByStatus" asp-route-status="@item.TaskStatus">Filtrar pelo status</a>
                </td>

            </tr>

        }

    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblTarefas').DataTable();
        });
    </script>
}
